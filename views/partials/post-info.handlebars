<article class="post">
  <div class="title">
    <a href="/post/{{id}}" target="_blank">{{title}}</a> <div class="post-by"> Posted by {{user.username}} on {{format_date created_at}}</div>
  </div>
  <div class="meta">
    <a href="/post/{{id}}" class="post-text">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
  <div class="post-text">
      {{post_text}}
  </div>
</article>